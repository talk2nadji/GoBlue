<div class="row">
  <div class="col-md-10 col-md-offset-1 center">

    <h2>Products</h2>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.name, product_path(product), class: "btn btn-link" %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <% if user_signed_in? %>
              <% if current_user.type == 'AdminUser' %>
                <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %></td>
                <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
              <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <% if user_signed_in? %>
      <% if current_user.type == 'AdminUser' %>
        <%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
      <% end %>
    <% end %>
  </div>
</div>
